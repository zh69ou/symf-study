{% extends 'public/user.html.twig' %}
{% set web = app.request.attributes.get('web') %}
{% block title %}{{ 'depot.outlist'|trans }}{{parent()}}{% endblock %}
{% block contentheader %}
<section class="content-header">
  <h1>
    {{ 'depot.outlist'|trans }}
    <small>{{ 'depot.outlist'|trans }}</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="{{path('siteuser',{'web':web})}}"><i class="fa fa-dashboard"></i>{{app.session.get('webinfo').title}}</a></li>
    <li class="active">{{ 'depot.outlist'|trans }}</li>
  </ol>
</section>
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="col-sm-3">
        <h3 class="box-title">{{ 'depot.outlist'|trans }}</h3>
        </div>
        <div class="col-sm-9 text-right">
          <a href="{{path('depotout',{'web':web})}}" class="btn btn-default">{{ 'depot_out'|trans }}</a>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
      {% for fm in app.session.flashBag.get('error') %}
      <div class="callout callout-danger">
        {{fm|trans}}
      </div>
      {% endfor %}
      {% for fm in app.session.flashBag.get('success') %}
      <div class="callout callout-success">
        {{fm|trans}}
      </div>
      {% endfor %}
        <table class="table table-hover">
          <tr>
            <th>{{ 'id'|trans }}</th>
            <th>{{ 'name'|trans }}</th>
            <th>{{ 'codenum'|trans }}</th>
            <th>{{ 'outstock'|trans }}</th>
            <th>{{ 'baseprice'|trans }}</th>
            <th>{{ 'sellprice'|trans }}</th>
            <th>{{ 'itime'|trans }}</th>
            <th style="display:none;">{{ 'edit'|trans }}</th>
          </tr>
          {% for f in depotstate %}
          <tr>
            <td>{{ loop.index }}</td>
            <td>{{f.getDepot.name}}</td>
            <td>{{f.getDepot.codenum}}</td>
            <td>{{f.num}}</td>
            <td>{{f.baseprice}}</td>
            <td>{{f.sellprice}}</td>
            <td>{{f.itime|date('Y-m-d H:i:s')}}</td>
            <td style="display:none;">
              <button data-toggle="modal" data-target="#delfo" data-whatever="{{path('depottypedel',{'web':web,'id':f.id})}}" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
            </td>
          </tr>
          {% else %}
          <tr><td colspan="8" class="text-center">{{ 'nousedepot'|trans }}</td></tr>
          {% endfor %}
        </table>
      </div>
      <div class="box-footer clearfix no-border">
        <div class="box-tools text-center">{{ pagerfanta(depotstate, 'twitter_bootstrap3', { routeName: 'depotoutlist',prev_message: '&laquo;',next_message: '&raquo;' }) }}</div>
      </div>
    </div>
  </div>
</div>
<div class="modal modal-danger" id="delfo">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{ 'delete.danger'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'depottype.delete'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">{{ 'btn.cancel'|trans }}</button>
        <a type="button" class="btn btn-outline" id="delurl" href="#">{{ 'btn.confirm'|trans }}</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block bjs %}
{{ parent() }}
<script type="text/javascript">
  $('#delfo').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget);
    var recipient = button.data('whatever');
    var modal = $(this);
    modal.find('.modal-footer a').attr('href',recipient);
  })
</script>
{% endblock %}