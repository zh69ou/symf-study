{% extends 'admin/index.html.twig' %}
{% block title %}{{ 'tool.add'|trans }}{{parent()}}{% endblock %}
{% block tcss %}
<link href="{{ asset('plugins/iCheck/all.css') }}" rel="stylesheet" />
{{ parent() }}
{% endblock %}
{% block contentheader %}
<section class="content-header">
  <h1>
    {{ 'ad.add_tool'|trans }}
    <small>{{ 'ad.add_tooltitle'|trans }}</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="{{path('adindex')}}"><i class="fa fa-dashboard"></i>{{ 'ad.index'|trans }}</a></li>
    <li class="active">{{ 'ad.add_tool'|trans }}</li>
  </ol>
</section>
{% endblock %}
{% block content %}
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">{{ 'ad.add_tool'|trans }}</h3>
      </div>
      {% for fm in app.session.flashBag.get('error') %}
      <div class="callout callout-danger">
        {{fm|trans}}
      </div>
      {% endfor %}
      {% for fm in app.session.flashBag.get('success') %}
      <div class="callout callout-success">
        {{fm|trans}}
      </div>
      {% endfor %}
      <form action="" method="post" name="form" enctype="multipart/form-data">
        <div class="box-body">
          <div class="col-md-6">
            <dl class="dl-horizontal">
              <dt>{{ 'codenum'|trans }}</dt>
              <dd class="form-group">
                <div class="input-group">
                  <input type="text" name="codenum" class="form-control" >
                  <span class="input-group-addon" onclick="random()"><i class="fa fa-random"></i></span>
                </div>
              </dd>
              <dt>{{ 'name'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="name" class="form-control" >
                </div>
              </dd>
              <dt>{{ 'cplist'|trans }}</dt>
              <dd class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" name="cplist[]" placeholder="">
                  <span class="input-group-addon" onclick="addbox(this)"><i class="fa fa-plus"></i></span>
                </div>
              </dd>
              <dt>{{ 'price'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="price" class="form-control" >
                </div>
              </dd>
              <dt>{{ 'sort'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="sort" class="form-control" >
                </div>
              </dd>
              <dt>{{ 'recommend'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <label>
                    <input type="radio" name="recommend" class="minimal" value="0">
                    {{ 'no'|trans }}
                    <input type="radio" name="recommend" class="minimal" value="1">
                    {{ 'yes'|trans }}
                  </label>
                </div>
              </dd>
              <dt>{{ 'state'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <label>
                    <input type="radio" name="state" class="minimal" value="0">
                    {{ 'nouse'|trans }}
                    <input type="radio" name="state" class="minimal" value="1">
                    {{ 'use'|trans }}
                    <input type="radio" name="state" class="minimal" value="2">
                    {{ 'cuse'|trans }}
                  </label>
                </div>
              </dd>
            </dl>
          </div>
          <div class="col-md-6">
            <dl class="dl-horizontal">
              <dt>{{ 'kword'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="kword" class="form-control" >
                </div>
              </dd>
              <dt>{{ 'desc'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="dword" class="form-control" >
                </div>
              </dd>
              <dt>{{ 'content'|trans }}</dt>
              <dd>
                <div class="form-group">
                  <input type="text" name="content" class="form-control" >
                </div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="box-footer text-center">
          <input type="hidden" name="_token" value="{{ csrf_token('adtoolps') }}">
          <button type="button" class="btn btn-primary butup">{{ 'subbut'|trans }}</button>
        </div>
      </form>
    </div>
{% endblock %}

{% block bjs %}
{{ parent() }}
<script src="{{ asset('plugins/iCheck/icheck.min.js') }}"></script>
<script type="text/javascript">
$(function ()
{
   $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
        checkboxClass: 'icheckbox_minimal-blue',
        radioClass: 'iradio_minimal-blue'
      });

  $('.butup').click(
  function()
  {
    subbox();
  });
});

document.onkeydown=function(){
 if (event.keyCode == 13){
    subbox();
 }
}

function subbox() {
  var c = $('[name="codenum"]').val();
  if(c!=''){
    $('[name="form"]').submit();
  }else{
    $('[name="codenum"]').focus();
    return false;
  }
}

function addbox(obj){
  var box = $(obj).parent();
  var newbox = box.clone();
  newbox.find('i').attr('class','fa fa-remove');
  newbox.find('span').attr('onclick','removebox(this)');
  box.after(newbox);
}

function removebox(obj){
  var box =$(obj).parent();
  box.remove();
}
function random(){
  $.ajax({
    url: '{{path("api_toolcode")}}',
    type: 'POST',
    dataType: 'json',
    success: function(data){
      $('[name="codenum"]').val(data.codenum);
    }
  })
}
</script>
{% endblock %}